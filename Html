<script>
  // page flow helper
  function goTo(name){
    // hide all
    ['page1','mood','yes','no','final'].forEach(id => {
      document.getElementById(id).classList.add('hidden');
    });
    // show chosen
    if(name === 'mood'){ document.getElementById('mood').classList.remove('hidden'); document.body.style.background = "linear-gradient(135deg,#f6d1e6,#d7f1ff)"; }
    if(name === 'page1'){ document.getElementById('page1').classList.remove('hidden'); document.body.style.background = "linear-gradient(135deg,#ffd6e7,#a2d2ff)"; }
    if(name === 'yes'){ document.getElementById('yes').classList.remove('hidden'); document.body.style.background = "linear-gradient(135deg,#ffdfe8,#fff7f0)"; }
    if(name === 'no'){ document.getElementById('no').classList.remove('hidden'); document.body.style.background = "linear-gradient(135deg,#d6f5ff,#e6e6ff)"; }
    if(name === 'final'){ document.getElementById('final').classList.remove('hidden'); document.body.style.background = "linear-gradient(135deg,#89f7fe,#66a6ff)"; startFinal(); }
  }

  // show yes/no result
  function showAnswer(ans){
    if(ans === 'yes') goTo('yes');
    else goTo('no');
  }

  // initial background
  document.body.style.background = "linear-gradient(135deg,#ffd6e7,#a2d2ff)";

  // final page behaviors: hearts/confetti + music
  const music = document.getElementById('music');
  let confettiTimer = null;

  function startFinal(){
    // ensure any previous stopped
    stopConfetti();
    // small delay to ensure user-trigger context (user already clicked)
    try { music.currentTime = 0; music.play(); } catch(e){ /* some browsers require explicit user gesture; but clicking buttons qualifies */ }

    // spawn confetti/emoji up-moving pieces
    const icons = ["âœ¨","ğŸŠ","ğŸ’«","ğŸŒ¸","ğŸˆ","ğŸ’–"];
    confettiTimer = setInterval(()=>{
      const el = document.createElement('div');
      el.className = Math.random()>.5 ? 'confetti' : 'heart-emoji';
      el.style.left = (Math.random()*82 + 6) + 'vw';
      el.style.top = '92vh';
      el.style.fontSize = (Math.random()*18 + 18) + 'px';
      el.style.opacity = 1;
      el.innerText = icons[Math.floor(Math.random()*icons.length)];
      el.style.animationDuration = (4 + Math.random()*3) + 's';
      document.body.appendChild(el);
      // remove later
      setTimeout(()=> {
        try{ el.remove(); }catch(e){}
      },7000);
    }, 300);

    // animate a few floating teddy clones on final too (gentle)
    for(let i=0;i<3;i++){
      const t = document.createElement('img');
      t.src = (i%2===0)
        ? 'https://cdn.pixabay.com/photo/2015/06/04/16/22/teddy-bear-797577_640.jpg'
        : 'https://cdn.pixabay.com/photo/2014/12/10/10/04/teddy-562960_1280.jpg';
      t.className = 'float-teddy';
      t.style.left = (10 + i*22) + '%';
      t.style.top = (10 + i*8) + '%';
      t.style.opacity = .95;
      t.style.width = (80 - i*12) + 'px';
      document.body.appendChild(t);
      setTimeout(()=>{ try{ t.remove(); }catch(e){} },7000);
    }
  }

  function stopConfetti(){
    clearInterval(confettiTimer);
    // remove any left elements
    document.querySelectorAll('.confetti, .heart-emoji').forEach(n=>n.remove());
  }

  // replay: restart final visuals and music
  function replay(){
    stopConfetti();
    startFinal();
  }

  // make Enter start at page1 -> safe default
  // show page1 initially (already visible)
</script>
